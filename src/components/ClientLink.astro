---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { image, lastItem, title, ...props } = Astro.props;
---

<span class:list={[ {lastItem: lastItem} ]}>
	 {title}{ !lastItem ? ',' : ''}
	 <img src={image} />
</span>
<style>
	span {
		display: inline-block;
		text-decoration: none;
		cursor: help;
		font-style: italic;
	}
	span:not(.lastItem) {
		margin-right: calc(var(--size) / 4);
	}

	img {
		position: absolute;
		bottom: 0;
		left: 0;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		opacity: 0;
		transition: opacity 222ms ease-in-out;
		object-fit: cover;
	}
	span:hover {
		text-decoration: underline;
	}
	span:hover img {
		display: block;
		opacity: 1;
	}
</style>
